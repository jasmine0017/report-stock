@model List<UserModel>
@{
	ViewData["Title"] = "User Management";
}

@if (TempData["msg"] != null)
{
	<div class="alert alert-success">
		@TempData["msg"]
		<button type="button" class="btn-danger" data-dismiss="msgslide"><span>&times;</span></button>
	</div>
}
<div class="row">
	<br />
</div>
<div class="text-start ">
	<a asp-controller="User" asp-action="AddUser" class="btn btn-primary">New User</a>
</div>
<div class="row">
	<br />
</div>
<div>
	<table class="table table-dark">
		<thead>
			<tr>
				<td hidden>Id</td>
				<td>Username</td>
				<td>Name</td>
				<td hidden>Password</td>
				<td>Department</td>
				<td>Status</td>
				<td>CreateDateTime</td>
				<td>Update</td>
				<td>Delete</td>
			</tr>
		</thead>
		<tbody>
			@{
				foreach (var item in Model)
				{
					<tr>
						<td hidden>@item.id</td>
						<td>@item.username</td>
						<td>@item.name</td>
						<td hidden>@item.password</td>
						<td>@item.department</td>
						<td>@item.status</td>
						<td>@item.createdate</td>
						<td>
							<a href="/User/EditUser?id=@item.id" class="btn btn-primary">Edit</a>
						</td>
						<td>
							<a href="/User/DeleteUser?id=@item.id" class="btn btn-danger">Delete</a>
						</td>
					</tr>
				}
			}
		</tbody>

	</table>
</div>